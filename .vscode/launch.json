{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}/wordpress"
            },
            "log": true,
            "ignore": [
                "**/vendor/**/*.php"
            ],
            "xdebugSettings": {
                "max_children": 128,
                "max_data": 1024,
                "max_depth": 3
            }
        },
        {
            "name": "Launch WordPress Admin",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}/wordpress"
            },
            "log": true,
            "url": "http://localhost/wp-admin/",
            "ignore": [
                "**/vendor/**/*.php"
            ],
            "xdebugSettings": {
                "max_children": 128,
                "max_data": 1024,
                "max_depth": 3
            }
        }
    ]
}
