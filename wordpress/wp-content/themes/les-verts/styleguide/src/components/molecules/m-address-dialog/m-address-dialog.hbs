<div class="m-address-dialog" id="m-address-{{id}}">
    <div class="m-address-dialog__main">
        {{#each addresses}}
            <div class="m-address-dialog__address">
                {{> @a-address . }}
            </div>
        {{/each}}
        {{#each links}}
            <div class="m-address-dialog__address">
                <a href="{{link}}" class="m-address-dialog__link">{{label}}</a>
            </div>
        {{/each}}
    </div>
    <button class="m-address-dialog__close" aria-label="{{close}}">
        <svg role="img">
            <title>{{close}}</title>
            <use xlink:href="#close"></use>
        </svg>
    </button>
</div>