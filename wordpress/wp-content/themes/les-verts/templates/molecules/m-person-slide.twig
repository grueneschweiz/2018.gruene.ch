{% set role = post.role(taxonomies) %}

<article class="m-person-slide">
	<figure class="m-person-slide__figure">
		{% include 'atoms/a-image.twig' with {
			'image': post.image,
			'size': 'testimonial',
			'no_caption': 1
		} %}
		<figcaption class="m-person-slide__caption">
			<p class="m-person-slide__quote">{{ post.quote(taxonomies) }}</p>
			<p class="m-person-slide__meta">
				<span class="m-person-slide__author">{{ post.full_name }}</span>{% if role %},
				<span class="m-person-slide__job">{{ role }}</span>{% endif %}
			</p>
		</figcaption>
	</figure>
</article>
