<div class="m-quote">
	<div class="m-quote__image-outer">
		<div class="m-quote__image-inner">
			{% include 'atoms/a-image.twig' with {
				'size': 'medium',
				'image': person.image,
				'no_caption': 1,
				'no_copy': 1
			} only %}
		</div>
	</div>
	<div class="m-quote__caption">
		<div class="m-quote__quote">{{ quote|wptexturize }}</div>
		<div class="m-quote__author">{{ person.title|wptexturize }}{% if role %}, {{ role|wptexturize }}{% endif %}</div>
	</div>
</div>
