{% extends "base.twig" %}

{% block content %}
	{% if post._EventVenueID %}
		{% set venue = ACFPost(post._EventVenueID) %}
	{% endif %}

	<article>
		<div class="page__content">
			<div class="page__shareable">
				{% if post.share_buttons %}
					<aside class="page__share">
						{% include 'molecules/m-share.twig' with {
							'url': post.link
						} only %}
					</aside>
				{% endif %}
				<header class="page__header-wrapper">
					<div class="page__header">
						<div class="page__breadcrumbs">
							{% include 'atoms/a-breadcrumbs.twig' %}
						</div>
						<h1>{{ post.title }}</h1>
						<div class="page__header-text">
							{% include 'molecules/m-event-details.twig' with {
								'event': post,
								'venue': venue
							} only %}
						</div>
					</div>
				</header>
				<div class="page__event-content">
					{{ post.description }}
				</div>
			</div>
		</div>
	</article>
{% endblock %}
