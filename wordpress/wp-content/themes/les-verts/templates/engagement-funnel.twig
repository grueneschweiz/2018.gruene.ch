{% set config = EFPConfiguration(block.configuration) %}

{% if block.action %}
	{% set action = Post(block.action) %}
{% else %}
	{% set action = config.initial_action %}
{% endif %}

{% set content = action.meta('content') %}

{% if content.post_type == 'petition' %}
	{% include 'content-block.twig' with {
		'block': content,
		'action_id': action.id,
		'config_id': config.id
	} only %}
{% elseif content.post_type == 'theme_form' %}
	{% include 'content-block.twig' with {'block': {
		'form': content,
		'action_id': action.id,
		'config_id': config.id
	}} only %}
{% else %}{# assume post #}
	{% for block in content.meta('main_content').content %}
		{% include 'content-block.twig' with {
			'block': block,
			'action_id': action.id,
			'config_id': config.id
		} only %}
	{% endfor %}
{% endif %}
