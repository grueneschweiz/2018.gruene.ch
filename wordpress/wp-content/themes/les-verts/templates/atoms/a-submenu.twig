<div class="a-submenu  {{ {{ modifiers|join(' ') }} }}">
    {% if featured %}
        {% include 'a-cat-title.twig' with cat-title only %}
        {% include 'a-link-image.twig' with link-image only %}
        <a class="a-submenu--featured__link" href="{{ url }}">
            <h3 class="a-submenu--featured__link__title">{{ title }}</h3>
        </a>
        <p class="a-submenu--featured__text">{{ text }}</p>
        {% include 'a-button.twig' button %}
    {% else %}
        <a class="a-submenu__title" href="{{ link }}">{{ title }}</a>
        <ul class="a-submenu__list">
            {% for item in menu.children %}
            <li class="a-submenu__item">
                <a class="a-submenu__link" href="{{ item.link }}">{{ item.title }}</a>
            </li>
            {% enfor %}
        </ul>
    {% endif %}
</div>