{% if acf_fc_layout == 'links' %}
	{% set target = link.target %}
	{% set title = link.title %}
	{% set url = link.url %}
{% endif %}

{% if acf_fc_layout == 'post_objects' or type == 'autolist' %}
	{% set title = post_object.title %}
	{% set url = post_object.link %}
	{% set categories = post_object.categories() %}
	{% if post_object.object_type == 'post' %}
		{% set date = post_object.post_date %}
	{% endif %}
{% endif %}

{% if type == 'autolist' and full_width %}
	{% set excerpt = post_object.excerpt() %}
{% endif %}

{% if date %}
	{% set date_format = _x('d. F Y', 'Date format. See http://php.net/manual/de/function.date.php', constant('THEME_DOMAIN')) %}
	{% set date = date|date(date_format) %}
	{% set timestamp = date|date('Y-m-d H:i') %}
{% endif %}

{% if full_width %}
<article class="a-post-link">
	{% else %}
	<a class="a-post-link a-post-link--link" href="{{ url }}" {% if target %} target="{{ target }}"{% endif %}>
		{% endif %}
		{% if full_width %}
			<header class="a-post-link__meta a-post-link__meta--header">
				{% if date %}
					<time class="a-post-link__meta-item" datetime="{{ timestamp }}">{{ date }}</time>
				{% endif %}
			</header>
		{% endif %}
		{% if full_width %}<a href="{{ url }}" class="a-post-link__title-link">{% endif %}
			<h3 class="a-post-link__title">{{ title }}</h3>
			{% if full_width %}</a>{% endif %}
		{% if full_width %}
			<p class="a-post-link__excerpt">{{ excerpt }}</p>
			{% include 'atoms/a-link-button.twig' with {
				'link': url,
				'label': __('Read more', constant('THEME_DOMAIN'))
			} only %}
		{% else %}
			{% if acf_fc_layout == 'post_objects' %}
				<footer class="a-post-link__meta a-post-link__meta--footer">
					{% if date %}
						<time class="a-post-link__meta-item" datetime="{{ timestamp }}">{{ date }}</time>
					{% endif %}
					{% if categories %}
						<div class="a-post-link__meta-item">{{ categories|join(', ') }}</div>
					{% endif %}
				</footer>
			{% endif %}
		{% endif %}
		{% if full_width %}
</article>
{% else %}
	</a>
{% endif %}

